<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

       <RadioGroup
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/check_box_women"
           android:orientation="horizontal"
           android:gravity="center">

           <RadioButton
               android:id="@+id/radioButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="2dp"
               android:text="Woman" />


           <RadioButton
               android:id="@+id/radioButton1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="2dp"

               android:text="Man" />

           <RadioButton
               android:id="@+id/radioButton2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="2dp"
               android:text="All" />
       </RadioGroup>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/check_box_women"
        android:layout_marginTop="17dp"
            />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:entries="@array/lang"
            android:prompt="@string/language_prompt"/>

        <EditText
            android:layout_below="@+id/spinner_language"
            android:id="@+id/finder_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find by address"

            />




    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>